# GitLab Dashboard Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# GitLab Configuration (Required)
# =============================================================================
GITLAB_URL=https://gitlab.com
GITLAB_ACCESS_TOKEN=your-gitlab-access-token-here

# =============================================================================
# Application Configuration (Optional)
# =============================================================================
SECRET_KEY=your-secret-key-for-sessions-change-in-production
FLASK_DEBUG=false
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# =============================================================================
# Database Configuration (Optional)
# =============================================================================
DATABASE_URL=gitlab_dashboard.db

# =============================================================================
# UI Configuration (Optional)
# =============================================================================
# Hide the configuration section if using env/file config
SHOW_CONFIG_SECTION=false
DEFAULT_VIEW=dashboard

# =============================================================================
# Sync Configuration (Optional)
# =============================================================================
AUTO_SYNC_ENABLED=false
SYNC_INTERVAL_MINUTES=30

# =============================================================================
# Logging Configuration (Optional)
# =============================================================================
LOG_LEVEL=INFO

# =============================================================================
# Security Configuration (Optional)
# =============================================================================
# Enable HTTPS in production
FORCE_HTTPS=false
ALLOWED_HOSTS=localhost,127.0.0.1
